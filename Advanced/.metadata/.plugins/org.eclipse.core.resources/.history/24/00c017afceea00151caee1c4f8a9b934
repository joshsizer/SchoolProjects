package main;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Main {
	public static void main (String[] args) {
		Scanner userInput = new Scanner(System.in);
		CaesarCipher cipher;
		String encryptOrDecrypt = "notanumber";
		
		System.out.print("Would you like to encrypt(1) or decrypt(2)? ");
		
		while (!isNumber(encryptOrDecrypt)) {
			System.out.print("Invalid number. Enter a 1 or 2: ");
			encryptOrDecrypt = userInput.nextLine();
		}
		
	}
	
	public static boolean isNumber(String num) {
		for (int i = 0; i < num.length(); i++) {
			if (num.charAt(i) >= '0' && num.charAt(i) <= '9')
				return true;
		}
		return false;
	}
	
	
}
